var loadMoreBtn = $('#load_more');
loadMoreBtn.data('page', loadMoreBtn.data('page') + 1)
           .attr('href', `${'<%= blogs_url %>'}?page=${loadMoreBtn.data('page')}`);
<%- if @blogs.count.zero? %>
loadMoreBtn.attr({href: "#", 'data-remote': false})
           .text('已经没有更多内容了')
           .addClass('none_more')
           .click(e => e.preventDefault());
<%- else %>
$("<%= escape_javascript(render @blogs, show_author: true)%>").appendTo(".blogs");
<%- end %>